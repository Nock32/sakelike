<%= render "shared/header_edit" %>
<%= render_breadcrumbs separator: ' > ' %>
<div class="brewers-edit-contents ">
  <div class="items-sell-main w-50 mx-auto text-center">
    <div class="card my-3" >
      <div class="card-header fs-2">
        レビューの変更内容を入力
      </div>
     <%= form_with model: [@item, @review],url:review_path,class: 'item-form', local: true do |f| %>
        <%= render 'shared/error_messages', model: f.object %>
        <table class="table" >

          <tbody>
            <tr>
              <th scope="row" class = "border rounded bg-light fs-5 fw-bold align-middle">タイトルを記載してください</th>
              <td class = "border  rounded align-middle col-6">
                <%= f.text_field :title, class:"items-text form-control align-middle", id:"item-info", placeholder:"レビュー本文（必須 1,000文字まで）" ,rows:"7" ,maxlength:"1000" %>
              </td>
            </tr>
            <tr>
              <th scope="row" class = "border rounded bg-light fs-5 fw-bold align-middle">レビュー内容を記載してください</th>
              <td class = "border  rounded align-middle col-6">
                <%= f.text_area :content, class:"items-text form-control align-middle", id:"item-info", placeholder:"レビュー本文（必須 1,000文字まで）" ,rows:"7" ,maxlength:"1000" %>
              </td>
            </tr>
          </tbody>

        </table>
        <div class="edit-btn-contents">
          <%= f.submit "変更する" ,class:"form-submit btn btn-primary badge rounded-pill btn-lg w-50 fs-6 mx-auto d-flex justify-content-center mb-3" %>
          <%=link_to 'もどる', item_path(@review.item_id), class:"form-submit btn btn-secondary badge rounded-pill btn-lg w-50 fs-6 mx-auto d-flex justify-content-center mb-3" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
<%= render "shared/footer" %>
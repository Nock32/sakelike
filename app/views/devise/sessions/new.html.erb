<%= render "shared/header_edit" %>
<%= render_breadcrumbs separator: ' > ' %>
<div class="brewers-edit-contents ">
  <div class="items-sell-main w-50 mx-auto text-center">
    <div class="card my-3" >
      <div class="card-header fs-2">
        ユーザー情報入力
      </div>
      <%= form_with model: @user, url: user_session_path, class: 'session-main', local: true do |f| %>
        <%= render 'shared/error_messages', model: f.object %>
        <table class="table" >
          <tbody>
            <tr>
              <th scope="row" class = "border rounded bg-light fs-5 fw-bold">メールアドレス</th>
              <td class = "border rounded align-middle">
                <%= f.text_field :email, class:"items-text form-control", id:"brewer-info", placeholder:"メールアドレス（必須 ）" %>
              </td>
            </tr>
            <tr>
              <th scope="row" class = "border rounded bg-light fs-5 fw-bold">パスワード</th>
              <td class = "border rounded align-middle">
                <%= f.password_field :password, class:"items-text form-control",  placeholder:"パスワード（必須 6文字以上 半角英数字1文字以上）" ,maxlength:"40" %>
              </td>
            </tr>
          </tbody>
        </table>
        <div class="edit-btn-contents">
          <%= f.submit "ログイン" ,class:"form-submit btn btn-primary badge rounded-pill btn-lg w-50 fs-6 mx-auto d-flex justify-content-center mb-3" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
<%= render "shared/footer" %>
<%= render "shared/header_edit" %>
<%= render_breadcrumbs separator: ' > ' %>
<div class="brewers-edit-contents ">

  <div class="col-md-6 order-md-2 mx-auto my-5">
    <div class="card bg-white border-none">
      <div class="card-header font-weight-bold fs-4 text-center">
        メールアドレスとパスワードを入力してログイン
      </div>
      <div class="card-body p-4">
        <%= form_with model: @user, url: user_session_path, class: 'session-main', local: true do |f| %>
          <div class="form-group px-5">
            <%= f.label :"メールアドレス" ,class:"mb-2" %><br/>
            <%= f.email_field :email, class: "form-control mb-3", required: true %>
          </div>
          <div class="form-group px-5">
            <%= f.label :password ,class:"mb-2" %><br/>
            <%= f.password_field :password, class: "form-control mb-3", required: true %>
          </div>
          <div class="text-center">
            <%= submit_tag "ログインする", class: "form-submit btn btn-primary badge rounded-pill btn-lg w-50 fs-6 mx-auto d-flex justify-content-center mb-3" %>
          </div>
          <div class="text-center py-3 text-decoration-none">
            <%= link_to "パスワードを忘れた方はこちら", "#",class:"text-decoration-none text-dark" %>
          </div>
        <% end %>
        <div class="col-md-6 order-md-2 mx-auto my-5 text-center">
          <div class="card " >
            <div class="card-header fw-bold">
              ※テストログインには以下のログイン情報を御使用ください。
            </div>
              <table class="table mt-3" >
                <tbody>
                  <tr>
                    <th scope="row" class = "border rounded bg-light ">メールアドレス</th>
                    <td class = "border rounded align-middle">a@ooooo.co.jp</td>
                  </tr>
                  <tr>
                    <th scope="row" class = "border rounded bg-light ">パスワード</th>
                    <td class = "border rounded align-middle">aaa000</td>
                  </tr>
                </tbody>
              </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<%= render "shared/footer" %>
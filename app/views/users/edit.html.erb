<%= render "shared/header_edit" %>
<div class="brewers-edit-contents ">
  <div class="items-sell-main w-50 mx-auto text-center">
    <div class="card my-3" >
      <div class="card-header fs-2">
        ユーザーの登録情報編集
      </div>
      <%= form_with model: current_user, local: true do |f| %>
        <%= render 'shared/error_messages', model: f.object %>
        <table class="table" >
          <tbody>
            <tr>
              <th scope="row" class = "border rounded bg-light fs-5 fw-bold">ニックネーム</th>
              <td class = "border  rounded align-middle">
                <%= f.text_field :nickname, class:"items-text form-control", id:"brewer-name", placeholder:"ニックネーム（必須 15文字まで)", maxlength:"15" %>
              </td>
            </tr>
            <tr>
              <th scope="row" class = "border rounded bg-light fs-5 fw-bold">eメール</th>
              <td class = "border rounded align-middle">
                <%= f.text_field :email, class:"items-text form-control", id:"brewer-info", placeholder:"eメール（必須 ）" %>
              </td>
            </tr>
            <tr>
              <th scope="row" class = "border rounded bg-light fs-5 fw-bold">パスワード</th>
              <td class = "border rounded align-middle">
                <%= f.password_field :password, class:"items-text form-control", id:"brewer-info", placeholder:"パスワード（必須 6文字以上 半角英数字1文字以上）" ,maxlength:"40" %>
              </td>
            </tr>
            <tr>
              <th scope="row" class = "border rounded bg-light fs-5 fw-bold">パスワード確認</th>
              <td class = "border rounded align-middle">
                <%= f.password_field :password_confirmation, class:"items-text form-control", id:"brewer-info", placeholder:"パスワード（必須 6文字以上 半角英字と半角数字を1文字以上含むこと）" ,maxlength:"40" %>
              </td>
            </tr>
            <tr>
              <th scope="row" class = "border rounded bg-light fs-5 fw-bold">姓(漢字)</th>
              <td class = "border rounded align-middle">
                <%= f.text_field :family_name, class:"items-text form-control" %>
              </td>
            </tr>
            <tr>
              <th scope="row" class = "border rounded bg-light fs-5 fw-bold">名前(漢字)</th>
              <td class = "border rounded align-middle">
                <%= f.text_field :first_name, class:"items-text form-control" %>
              </td>
            </tr>
            <tr>
              <th scope="row" class = "border rounded bg-light fs-5 fw-bold">姓(カタカナ)</th>
              <td class = "border rounded align-middle">
                <%= f.text_field :family_name_kana, class:"items-text form-control" %>
              </td>
            </tr>
            <tr>
              <th scope="row" class = "border rounded bg-light fs-5 fw-bold">名前(カタカナ)</th>
              <td class = "border rounded align-middle">
                <%= f.text_field :first_name_kana, class:"items-text form-control" %>
              </td>
            </tr>
            <tr>
              <th scope="row" class = "border rounded bg-light fs-5 fw-bold">生年月日</th>
              <td class = "border rounded align-middle">
                <%= f.text_field :birthday, class:"datepicker items-text form-control" ,id:"calendar" %>
                <script>
                    document.getElementById("calendar").flatpickr();
                </script>
              </td>
            </tr>
          </tbody>
        </table>
        <div class="edit-btn-contents">
          <%= f.submit "変更する" ,class:"form-submit btn btn-primary badge rounded-pill btn-lg w-50 fs-6 mx-auto d-flex justify-content-center mb-3" %>
          <%=link_to 'もどる', root_path, class:"form-submit btn btn-secondary badge rounded-pill btn-lg w-50 fs-6 mx-auto d-flex justify-content-center mb-3" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
<%= render "shared/footer" %>

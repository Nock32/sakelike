<div class='account-page' id='account-page'>
  <div class='account-page__inner clearfix'>
    <div class='account-page__inner--left account-page__header'>
      <h2>Edit Account</h2>
      <h5>アカウントの編集</h5>
      <%= link_to "ログアウト", "#", class: 'btn'%>
      <%= link_to "チャットページに戻る", :back, class: 'btn'%>
    </div>
    <div class='account-page__inner--right user-form'>
      <%= form_with model: current_user, local: true do |f|%>
      <%= render "shared/error_messages", model: f.object %>

        <div class='field'>
          <div class='field-label'>
            <%= f.label :nickname%>
          </div>
          <div class='field-input'>
            <%= f.text_field :nickname, autofocus: true%>
          </div>
        </div>

        <div class='field'>
          <div class='field-label'>
            <%= f.label :email%>
          </div>
          <div class='field-input'>
            <%= f.email_field :email%>
          </div>
        </div>

        <div class='field'>
          <div class='field-label'>
            <%= f.label :password%>
          </div>
          <div class='field-input'>
            <%= f.password_field :password%>
          </div>
        </div>

        <div class='field'>
          <div class='field-label'>
            <%= f.label :password_confirmation%>
          </div>
          <div class='field-input'>
            <%= f.password_field :password_confirmation%>
          </div>
        </div>

        <div class='field'>
          <div class='field-label'>
            <%= f.label :family_name%>
          </div>
          <div class='field-input'>
            <%= f.text_field :family_name%>
          </div>
        </div>

        <div class='field'>
          <div class='field-label'>
            <%= f.label :first_name%>
          </div>
          <div class='field-input'>
            <%= f.text_field :first_name%>
          </div>
        </div>

        <div class='field'>
          <div class='field-label'>
            <%= f.label :family_name_kana%>
          </div>
          <div class='field-input'>
            <%= f.text_field :family_name_kana%>
          </div>
        </div>

        <div class='field'>
          <div class='field-label'>
            <%= f.label :first_name_kana%>
          </div>
          <div class='field-input'>
            <%= f.text_field :first_name_kana%>
          </div>
        </div>

        <div class='field'>
          <div class='field-label'>
            <%= f.label :birthday%>
          </div>
          <div class='field-input'>
            <%= f.text_field :birthday%>
          </div>
        </div>

        <div class='actions'>
          <%= f.submit "Update", class: 'btn'%>
        </div>
      <% end %>
    </div>
  </div>
</div>
